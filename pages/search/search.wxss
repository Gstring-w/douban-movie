/* pages/search/search.wxss */


.search{
  width: 90%;
  height: 70rpx;
  margin: 10rpx auto;
  border-radius: 20rpx;
  border: 1px solid #aaa;
  display: flex;
  align-items: center;
}
icon{
  display: inline;
  margin: 0 15rpx;
  flex: 1;
}
.search-input{
  flex: 8;
  display: inline-block;
  margin: 0 10rpx;
  height: 70rpx;
  width: 80%;
  line-height: 70rpx;
}
.item{
  width: 90%;
  height: 20vh;
  margin: 20rpx auto;
  color: #ccc;
  display: flex;
}
.item image{
  flex: 1;
  width: 20vh;
  height: 20vh;
}
.item .des{
  flex: 2;
  height: 20vh;
  width: 40vh;
  vertical-align: top;
  display: inline-block;

}
.movie-title{
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-weight: bold;
  color: #000;
  width: 100%;
  height: 40%; 
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.movie-des,.movie-dir,.movie-score{
  width: 100%;
  height: 10%;
  padding: 10rpx 20rpx;
  color: #aaa;
  display: block;
  font-size: 12px;
}
