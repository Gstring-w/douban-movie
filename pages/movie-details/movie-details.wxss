/* pages/movie-details/movie-details.wxss */
@import "/pages/movie-gird/movie-gird";
.container{
  width: 100%;
  height: 100vh;
  background: #eee;
}
.movie-poster{
  padding: 10rpx 0rpx;
  width: 100%;
  height: 25vh;
  text-align: center;
}
.movie-poster image{
  width: 20vh;
  height: 25vh;
}
.movie-des{
  width: 100%;
  
  background: #fff;
}
.movie-basis{
  padding: 20rpx;
}
.basis-title{
  font-weight: 600;
  font-size: 35rpx;
  padding: 10rpx 0rpx;
}
.basis-content{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.basis-content-left{
  flex: 7;
}
.basis-content-left text{
  display: block;
  font-size: 25rpx;
  color: #aaa;
  padding: 10rpx 0rpx;
}
.movie-sore{
  width: 120rpx;
  height: 130rpx;
  border: 1px solid #30A080;
  margin-right: 20rpx;
  text-align: center;
}
.sore-mo{
  font-weight: 600;
  font-size: 35rpx;
  padding: 10rpx 0;
}
.want{
  font-size: 25rpx;
  color: #000;
}

basis-content-right{
  flex: 3;
}
.wantSee{
  position: absolute;
  left: 30vw;
  top: 75vw;
  display: inline-block;
  width: 80rpx;
  height: 60rpx;
  border: 1px solid #30A080;
  font-size: 35rpx;
  text-align: center;
  line-height: 60rpx;
  color: #30A080;
  font-weight: 600;
  border-radius: 8rpx;
  padding: 0 10rpx;
  
  
}
.seed{
  padding: 0 10rpx;
  border-radius: 8rpx;
  font-weight: 600;
  color: #30A080;
  position: absolute;
  right: 30vw;
  top: 75vw;
  display: inline-block;  
  width: 80rpx;
  height: 60rpx;
  border: 1px solid #30A080;
  font-size: 35rpx;
  text-align: center;
  line-height: 60rpx;

}
.view-s{

  width: 200vw;

 
}
.brief{
  margin-top:10vh; 
}
.brief-title{
  font-size: 35rpx;
  color: #aaa;
  display: block;
}
.brief-content{
  font-size: 25rpx;
  color: #000;
}
.people{
  width: 100%;
   white-space: nowrap;
 
}

.people-item{
  width: 30vw;
  height: auto;
  padding: 30rpx;
  display: inline-block;
}
.people-item image{
  width: 19vh;
  height: 24vh;
  display: block;
}
.people-item .people-name{
  width: 19vh;
  font-size: 35rpx;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.gird-content{
  padding: 20rpx 0;
  width: 400%; 
  /* background: #eee; */
  border-bottom: 1px solid #ccc;
}